<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="textAllCaps">false</item>
        <!--<item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>-->
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>


    <!-- 防止欢迎页白屏或者黑屏，设置图片 -->
    <style name="AppTheme.SplashTheme" parent="AppTheme">
        <!--<item name="android:windowBackground">@drawable/loading</item>-->
        <!--全屏模式-->
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    <style name="AppTheme.ImageTranslucentTheme" parent="AppTheme.SplashTheme"/>

    <style name="AppTheme.ColorTranslucentTheme" parent="AppTheme.SplashTheme"/>


    <style name="loading_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="ScFrameProgressBar" parent="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small.Title">
        <item name="android:indeterminateDrawable">@drawable/progress_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!--水平分割线1px-->
    <style name="Frame_HorizontalLine_Height_1px">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line_1px_color</item>
    </style>

    <!--水平分割线10dp-->
    <style name="Frame_HorizontalLine_Height_10dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/line_10dp_color</item>
    </style>

    <!--竖直分割线1px-->
    <style name="Frame_VerticalLine_Width_1px">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_10dp_color</item>
    </style>


    <style name="base_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/scframe_toolbar_bg_color</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--Light系列的主题,字体是黑色的,menu菜单背景是白色-->
    <style name="base_toolbar_theme_Light" parent="@style/ThemeOverlay.AppCompat.Light"/>

    <!--Dark系列的主题,字体是白色的,menu菜单背景是黑色-->
    <style name="base_toolbar_theme_Dark" parent="@style/ThemeOverlay.AppCompat.Dark"/>
</resources>

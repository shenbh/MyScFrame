<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--头部-->
    <ImageView
        android:id="@+id/top_line"
        style="@style/Frame_HorizontalLine_Height_10dp"
        android:visibility="visible"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/cart_item_ex_head_tv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/top_line"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textColor="@color/dark_text_color"
        android:textSize="14sp"
        android:visibility="visible"
        tools:text="以下商品不支持XXX/已失效商品"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/top_line2"
        style="@style/Frame_HorizontalLine_Height_1px"
        android:layout_below="@+id/cart_item_ex_head_tv"
        android:visibility="visible"
        tools:visibility="visible"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/buttom_line"
        style="@style/Frame_HorizontalLine_Height_1px"
        android:layout_below="@+id/goods_pic_iv"/>

    <TextView
        android:id="@+id/clear_goods_tv"
        android:layout_width="86dp"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/buttom_line"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_textview_presellpast_corners_grayborder"
        android:gravity="center"
        android:textColor="@color/light_text_color"
        android:textSize="12sp"
        android:visibility="visible"
        tools:text="清空失效宝贝"
        tools:visibility="visible"/>


</RelativeLayout>
<resources>    <!-- Base application theme. -->    <style name="BaseAppTheme" parent="AppTheme">        <!-- Customize your theme here. -->        <item name="colorPrimary">@color/colorMain</item>        <item name="colorPrimaryDark">@color/colorMain</item>        <item name="colorAccent">@color/colorMain</item>        <!--所有的布局的默认颜色都会改变,该属性不适合写在act的style里面-->        <!--<item name="android:textColorPrimary">@android:color/white</item>-->        <!--actionbar上Menu的文字颜色-->        <item name="android:actionMenuTextColor">@android:color/white</item>        <!--colorControlNormal 设置返回键的颜色,默认状态状态颜色-->        <item name="colorControlNormal">@color/black</item>        <!-- AppCompatEditText选择的底线颜色 -->        <item name="colorControlActivated">@color/colorMain</item>        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>        <!--自定义AlertDialog-->        <!--<item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>-->        <!--<item name="android:alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>-->        <!--软键盘不顶起布局并且不自动显示-->        <!--<item name="android:windowSoftInputMode">adjustResize|stateHidden</item>-->        <item name="windowActionBar">false</item>        <item name="windowNoTitle">true</item>        <!--默认的 Window 背景-->        <item name="android:windowBackground">@android:color/white</item>        <!--返回icon-->        <!--<item name="android:homeAsUpIndicator">@drawable/back</item>-->    </style>    <style name="BaseAppTheme.SplashTheme" parent="AppTheme">        <item name="android:windowBackground">@drawable/bg_flight_info_activity_m</item>        <!--全屏模式-->        <item name="android:windowFullscreen">true</item>        <item name="windowNoTitle">true</item>    </style>    <style name="BaseAppTheme.ImageTranslucentTheme" parent="BaseAppTheme.SplashTheme"/>    <!--######################公共按钮Style##################-->    <style name="BtnStyle"/>    <style name="BtnStyle.BgGreen_TextWhite_Radius10" parent="BtnStyle">        <item name="android:textColor">@drawable/s_text_color_white</item>        <item name="android:background">@drawable/s_btn_bg_radius10</item>        <item name="android:paddingLeft">4dp</item>        <item name="android:paddingRight">4dp</item>        <item name="android:textSize">16sp</item>        <item name="android:textStyle">bold</item>    </style></resources>